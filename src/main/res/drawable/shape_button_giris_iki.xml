<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#14BDD3" />
            <gradient android:angle="-90" android:startColor="#408AAD" android:endColor="#138CC5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#136CB4" />
            <solid android:color="#17CAE2"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#088BC7" />
            <gradient android:angle="-90" android:startColor="#2B79B6" android:endColor="#2BABE9" />
        </shape>
    </item>
</selector>