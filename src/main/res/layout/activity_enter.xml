<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".enter"
    android:orientation="vertical"

    android:id="@+id/enter_linear_layout"
    android:background="@drawable/gradient_list"
    >
    <!--    android:background="@color/background_color"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="25dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-MAİL"
            android:textColor="@color/second_background"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:id="@+id/e_mail_yazısı"
            />
        <EditText
            android:id="@+id/email_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="@color/editText"
            android:hint="E-mail"
            android:textColor="@color/editText"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_ediitext"
            android:layout_marginTop="10dp"


            />

        <EditText
            android:id="@+id/parola_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="@color/editText"
            android:hint="Paralo"
            android:inputType="textPassword"
            android:textColor="@color/editText"

            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_ediitext"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/giris_yap_button"
            android:text="Giriş yap"
            android:textColor="#FFFFFF"
            android:background="@drawable/shape_button_giris_iki"
            android:textSize="15dp"


            />


        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/misafir_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Misafir olarak giriş yap."
android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/text_beyaz"

            ></TextView>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/üye_ol_button"
            android:text="Üye ol!"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_button"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sifreni_mi_unuttun_textview"
            android:text="Şifreni mi unuttun"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:gravity="center"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Onay Mailini tekrar gönder"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:id="@+id/onay_mailini_tekrar_gonder_textview"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bu bir 'Hatay Berkay Isıkoğlu' projesidir."
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            ></TextView>



    </LinearLayout>


    </LinearLayout>