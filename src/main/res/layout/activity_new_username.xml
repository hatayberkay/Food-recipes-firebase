<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".enter_things.new_username"
    android:background="@color/background_color"
    android:orientation="vertical"

    >



    <EditText
        android:id="@+id/kullanıcı_adı_secimi_edittext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColorHint="@color/editText"
        android:hint="Kullanıcı adı giriniz."
        android:textColor="@color/editText"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_ediitext"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"


        />



    <Button
        android:id="@+id/kullanıcı_adı_belirleme_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanıcı adı belirleyiniz."
        android:background="@drawable/shape_ediitext"
        android:textStyle="bold"
        android:layout_margin="50dp"


        ></Button>



</LinearLayout>