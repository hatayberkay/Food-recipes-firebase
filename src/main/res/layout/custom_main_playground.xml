<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sari"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="197dp"
        android:layout_margin="10sp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="20sp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageview_bir"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/logom_koy"

                ></ImageView>

            <TextView
                android:id="@+id/isim_textview"
                android:layout_width="150dp"
                android:layout_height="24dp"
                android:layout_below="@id/imageview_bir"
                android:gravity="center"
                android:text="FotoÄŸraf bir"
                android:textColor="@color/sari"
                android:textSize="20dp"
                android:textStyle="bold"

                >


            </TextView>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>